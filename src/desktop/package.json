{
  "name": "tko-loyalty-desktop",
  "version": "1.0.0",
  "description": "TKO Toy Co Loyalty Program Desktop Application",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run electron-dev\"",
    "electron-dev": "electron .",
    "watch:main": "tsc -p electron-tsconfig.json -w",
    "watch:renderer": "tsc -p tsconfig.json -w",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p electron-tsconfig.json",
    "build:renderer": "tsc -p tsconfig.json && npm run copy-assets",
    "copy-assets": "copyfiles -u 1 \"src/renderer/**/*.{html,css,svg}\" dist/renderer",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "TKO Toy Co",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "axios": "^1.4.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "concurrently": "^8.0.1",
    "copyfiles": "^2.4.1",
    "electron": "^24.3.0",
    "electron-builder": "^23.6.0",
    "jest": "^29.5.0",
    "typescript": "^4.9.5"
  },
  "build": {
    "appId": "com.tkotoyco.loyalty",
    "productName": "TKO Loyalty",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
